{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "image-compress",
  "version": "0.1.0",
  "identifier": "com.image-compress.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "image-compress",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window with full file system access",
          "windows": ["main"],
          "permissions": [
            "fs:default",
            "dialog:default"
          ],
          "scope": {
            "fs": {
              "allow": [
                "$TEMP/**",
                "$TEMP",
                "$APPDATA/**",
                "$LOCALDATA/**",
                "**"
              ],
              "deny": []
            },
            "path": {
              "allow": [
                "$TEMP/**",
                "$TEMP",
                "$APPDATA/**",
                "$LOCALDATA/**",
                "**"
              ]
            }
          }
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
